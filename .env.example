# Family Dashboard Environment Configuration
# Copy this file to .env and fill in your values

# Storage Server Configuration
STORAGE_SERVER_PORT=3001
STORAGE_SERVER_HOST=0.0.0.0

# Web App Configuration
WEB_APP_PORT=8081

# Google Calendar API
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_CLIENT_ID=your_google_client_id_here.apps.googleusercontent.com
CALENDAR_IDS=primary,additional_calendar@group.calendar.google.com

# Weather API (OpenWeatherMap)
WEATHER_API_KEY=your_openweathermap_api_key_here
WEATHER_LATITUDE=40.7128
WEATHER_LONGITUDE=-74.0060
WEATHER_LOCATION_NAME=Your City, State

# Backup Configuration
ENABLE_BACKUPS=true
BACKUP_TIME=00:00
MAX_BACKUPS=7

# Display Configuration
CALENDAR_DISPLAY_LIMIT=10
TASKS_DISPLAY_LIMIT=10
REWARDS_DISPLAY_LIMIT=10
USERS_DISPLAY_LIMIT=10
